<h2>Single post</h2>
<p style="color: green"><%= notice %></p>
<div class="post_header">
  <div class="post-show-header">
    <div class="ps-name">
      Post by <%= @user.name %>
    </div>
    <div class="ps-counters">
      Comments: <%= @post.comments_counter %>, Likes: <%= @post.likes_counter %>
    </div>
  </div>

  <p><%= @post.title %></p>
  <p><%= @post.text %></p>  
  <div class="flex-clicks">
  <%= button_to 'click to like post', user_post_likes_path(@user, @post), method: 'post' %>
  </div>
</div>

<div class='div-comments'>
  <% @post.five_recent_comments.each do |comment| %>
     <div class='comments'>
        <span style="font-weight :bold font-size: 10px">Username <%= comment.user_id %>:</span> <%= comment.text %>
      </div>
  <% end %>        
</div>
        