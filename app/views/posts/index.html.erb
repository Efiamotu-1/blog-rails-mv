<%= render partial: "shared/user", locals: {user: @user } %>

<% @posts.each_with_index do |post, i| %>
    <%= render 'shared/post', post: post, index: i%>

     <div class='div-comments'>
    <% post.five_recent_comments.each_with_index do |comment, index| %>
       <div class='comments'>
          <span style="font-weight :bold font-size: 10px">Username <%= comment.user_id %>:</span> <%= comment.text %>
        </div>
    <% end %>        
    </div>

<% end %>

<div class='user_button'>
  <button>
    <%= link_to 'Pagination', user_post_path(@user, @posts[0]) %>
  </button>
</div>

